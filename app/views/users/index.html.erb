<h1>Listing users</h1>

<table>
  <tr>
    <th>Fb</th>
    <th>First name</th>
    <th>Middle name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Office</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.fb_id %></td>
    <td><%= user.first_name %></td>
    <td><%= user.middle_name %></td>
    <td><%= user.personal_email %></td>
    <td><%= user.cel_phone %></td>
    <td><%= user.office_id %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

